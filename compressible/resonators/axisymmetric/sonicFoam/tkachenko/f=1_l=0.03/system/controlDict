FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     sonicFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime 		0.6;// 100 Tw

deltaT          4.16e-07;// Co=0.8

writeControl    timeStep;

writeInterval   492.35;// Tw/dt/30

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

maxCo 0.99;

adjustTimeStep  yes;

maxDeltaT       5.15e-07;// Co=0.99

//Output
functions
{
    probes
    {
        libs            ("libsampling.so");
        type            probes;
        name            probes;
        writeControl    timeStep;
        writeInterval   1;
        fields          (p);
        probeLocations
        (
            (0 0 0)
            // (0.85 0 0)
            // (1.7 0 0)
        );
    }
}
